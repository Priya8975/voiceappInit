<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/chatwall">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:background="#3843D3"
            app:titleMarginStart="30dp"
            app:titleTextColor="#ffffff"
            app:subtitleTextColor="#ffffff"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:text="27 March 2020"
            android:textColor="#9B9B9B"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:layout_below="@+id/date"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Hello There! I am your new voice assistant.you can ask me for any help."
                android:textColor="#000000" />




        <ImageView
            android:id="@+id/picture_chat"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="17dp"
            android:layout_below="@id/date"
            android:background="@drawable/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chat2"
                android:layout_width="190dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="#A4C639"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Heyy There ! When did you born ?"
                android:textColor="#4a4a4a" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="47dp"
                android:layout_below="@+id/chat2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="12 March "
                android:textColor="#9B9B9B" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#000000"
                android:text="It's My first day in this World . 12 March is my BirthDate."
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/chat2"
                android:background="#ffffff"
                android:layout_width="190dp"
                android:layout_height="70dp" />




            <ImageView
                android:id="@+id/picture_chat"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="17dp"
                android:layout_below="@id/chat2"
                android:background="@drawable/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chat2"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#4a4a4a"
                android:text="So! Can you do anything for me Voice Assistant ?"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="#A4C639"
                android:layout_width="190dp"
                android:layout_height="64dp" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="47dp"
                android:layout_below="@+id/chat2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="12 March "
                android:textColor="#9B9B9B" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#000000"
                android:text="You can give me Voice Commands. Try me!"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/chat2"
                android:background="#ffffff"
                android:layout_width="190dp"
                android:layout_height="64dp" />




            <ImageView
                android:id="@+id/picture_chat"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="17dp"
                android:layout_below="@id/chat2"
                android:background="@drawable/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_mic_black_24dp"
        android:tint="@android:color/white"/>

</android.support.design.widget.CoordinatorLayout>